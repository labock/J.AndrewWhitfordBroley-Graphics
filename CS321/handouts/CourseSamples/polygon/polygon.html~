<!--
  polygon.html

  Program to draw a regular polygon with a specified number of vertices
  Adapted from Angel & Shreiner 2D Sierpinski Gasket program
  by J. Andrew Whitford Holey, January 14, 2016
-->


<!--
  vertex shader script
-->
<script id="vertex-shader" type="x-shader/x-vertex">
attribute vec4 vPosition;

void main () {
  gl_Position  = vPosition;
}
</script>


<!--
  fragment shader script
  color all fragments magenta
-->
<script id="fragment-shader" type="x-shader/x-fragment">
precision mediump float;

void main() {
    gl_FragColor = vec4( 1.0, 0.0, 1.0, 1.0 );
}
</script>


<!--
  Source the common scripts and the script for this program
-->
<script type="text/javascript" src="../Common/webgl-utils.js"></script>
<script type="text/javascript" src="../Common/initShaders.js"></script>
<script type="text/javascript" src="../Common/MV.js"></script>
<script type="text/javascript" src="polygon.js"></script>
</head>


<body>

<!--
  Create the canvas for this program
-->
<canvas id="gl-canvas" width="512" height="512">
Oops ... your browser doesn't support the HTML5 canvas element
</canvas>

<form>
  <br>
  Number of sides (at least 3):
  <input id="nsinput" type="range" min="3" max="128"><br>
  Use arrows to change number of sides or enter number,
  clicking outside the box, if necessary
</form>

</body>
